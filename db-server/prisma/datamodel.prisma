type MenuItem {
  id: ID! @unique
  name: String!
  price: Float!
  category: Category!
}

type Order {
  id: ID! @unique
  items: [OrderItem!]! @relation(name: "ItemsToOrder", onDelete: CASCADE)
  total: Float!
}

type OrderItem {
  name: String!
  quantity: Int!
  price: Float!
  order: Order! @relation(name: "ItemsToOrder", onDelete: SET_NULL)
}

enum Category {
  BREAKFAST
  MAIN_DISH
  SOUPS
  BITES
  RICE_DISHES
  AFRICAN_HOT_POT
  DELIGHTS
  COLD_STARTER
  PEPPERED_BITES
  PET_DRINKS
  BOTTLE_DRINKS
  CAN_DRINKS
  JUICE
}
